<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.agendaandroid.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bInserirCompromissos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Inserir Compromissos" />

        <Button
            android:id="@+id/bListaCompromisso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Listar Compromissos" />

        <Button
            android:id="@+id/bInforma"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Informar Compromisso" />

        <Button
            android:id="@+id/bDev"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Desenvolvedores" />
    </LinearLayout>

</LinearLayout>